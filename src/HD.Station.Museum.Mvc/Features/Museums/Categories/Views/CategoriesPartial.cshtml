@model CategoriesEditViewModel
    <div class="CategoriesPartial">       
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            <label for="Name">@Localizer["Name"]:</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="Description">@Localizer["Description"]:</label>
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <lable for="ParentId">@Localizer["ParentId"]:</lable>
            <input asp-for="ParentId" id="dropdowntree" class="form-control" />
        </div>
        <div class="form-group">
            <lable for="Disabled">@Localizer["Disabled"]:</lable>
            @Html.CheckBoxFor(m => m.Disabled, new { @class = "form-control" })
        </div>
    </div>