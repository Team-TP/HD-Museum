@model MachinesEditViewModel
@{
    ViewData["Title"] = Localizer["Storage Location"];
    ViewData["SubTitle"] = Localizer["Create"];
    var message = ViewBag.Notice as NoticeModel;
}
<div class="hr-divider">
    <h3 class="hr-divider-content hr-divider-heading">
        @ViewData["Title"]
    </h3>
</div>


<div notice-for="message"></div>
<div class="content col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
    <form name="Create" id="formCreate" asp-action="Create" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.Id);
            <div class="form-group">
                <label for="Title">@Localizer["Name"]:</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Credits">@Localizer["Description"]:</label>
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <lable for="Disabled">@Localizer["Disabled"]:</lable>
                @Html.CheckBoxFor(m => m.Disabled, new { @class = "form-control" })
            </div>
    </form>
</div>


@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-default" data-dismiss="modal">
            @Localizer["Close"]
        </button>
        <button icon-name="action-save" name="submit" class="btn btn-success" form="formCreate">
            @Localizer["Create"]
        </button>
    </div>
}






